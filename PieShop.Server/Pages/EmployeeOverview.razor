@page "/employeeoverview"
@inherits EmployeeOverviewBase

<h1 class="page-title">All employees</h1>
@if (Employees == null)
{
    <p><em>Loading......</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Employee ID</th>
                <th>First name</th>
                <th>Last name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Employees)
            {
                <tr>
                    <td><img /></td>
                    <td><img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{employee.EmployeeId}-small.jpg")" class="rounded-circle" /></td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>
                        <a href="@($"employeedetails/{employee.EmployeeId}")" class="btn-primary">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a href="@($"employeeedit/{employee.EmployeeId}")" class="btn-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
